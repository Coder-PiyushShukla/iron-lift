datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())

  // 1. Personal Stats
  age    Int?
  weight Float?
  height Float?
  gender String?
  bmr    Int?

  // 2. Onboarding Preferences
  goal         String?
  trainingDays Int?
  dietType     String?

  // 3. AI Generated Data
  workoutPlan Json?
  dietPlan    Json?

  // 4. Gamification
  streak      Int       @default(0)
  lastWorkout DateTime?

  // Relations
  accounts Account[]
  sessions Session[]
  mealLogs MealLog[] // <--- ADDED THIS (Fixes the "missing opposite relation" error)
}

// Fixed MealLog Model for MongoDB
model MealLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId // <--- Fixed ID format
  userId    String   @db.ObjectId // <--- Fixed Foreign Key type
  user      User     @relation(fields: [userId], references: [id])
  name      String
  calories  Int
  protein   Int
  carbs     Int
  fats      Int
  imageUrl  String?
  createdAt DateTime @default(now())
}